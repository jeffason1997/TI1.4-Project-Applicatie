<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/rideName_tv"
        android:layout_width="205dp"
        android:layout_height="36dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/catogoryRide_tv"
        app:layout_constraintLeft_toRightOf="@+id/rideImage_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="15dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/rideImage_image"
        android:layout_width="72dp"
        android:layout_height="68dp"
        app:srcCompat="@android:color/background_dark"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catogoryRide_tv"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/rideImage_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/ride_time"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/lv_kind_tijd"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/rideImage_image"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/rideImage_image" />
</android.support.constraint.ConstraintLayout>