<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/achievement_row_image"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_essteling"
        android:layout_width="117dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/achievement_row_discription"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/achievement_row_image"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/achievement_row_percentage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.4" />

    <ProgressBar
        android:id="@+id/achievement_row_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/achievement_row_image"
        app:layout_constraintLeft_toRightOf="@+id/achievement_row_image"
        app:layout_constraintTop_toBottomOf="@+id/achievement_row_discription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/achievement_row_percentage"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/achievement_row_progressbar"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/achievement_row_progressbar"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>