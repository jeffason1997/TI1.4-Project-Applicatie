<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b2.projectgroep.ti14_applicatie.LoginActivity">

    <TextView
        android:id="@+id/Login_titelText"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:text="@string/welcome_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <ImageView
        android:id="@+id/Login_logo"
        android:layout_width="137dp"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:contentDescription="@string/login_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_titelText"
        app:layout_constraintVertical_bias="0.305"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginStart="67dp"
        android:fontFamily="serif"
        android:text="@string/inlog_text"
        app:layout_constraintLeft_toRightOf="@+id/Login_logo"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_titelText" />

    <EditText
        android:id="@+id/Login_number_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@id/Login_number_id"
        app:layout_constraintLeft_toRightOf="@+id/LoginText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_titelText"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.156" />

    <Button
        android:id="@+id/Login_Button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inlog_button"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_number_id"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Login_logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintVertical_bias="0.072" />

</android.support.constraint.ConstraintLayout>
