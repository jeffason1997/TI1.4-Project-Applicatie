<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b2.projectgroep.ti14_applicatie.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@color/colorGreen"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/Login_titelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textColor="@android:color/background_light"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Login_logo"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:contentDescription="@string/login_image_description"
        app:srcCompat="@drawable/logo_essteling"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_titelText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/inlog_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginLeft="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Esetup_confirm_button" />

    <EditText
        android:id="@+id/Login_number_id"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="number"
        android:labelFor="@id/Login_number_id"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        android:textSize="12sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/LoginText"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/LoginText"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/Esetup_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inlog_button"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Login_logo"
        app:layout_constraintRight_toRightOf="@+id/Login_logo"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</android.support.constraint.ConstraintLayout>
