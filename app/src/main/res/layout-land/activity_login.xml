<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b2.projectgroep.ti14_applicatie.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@color/colorGreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Login_titelText"
        android:text="@string/welcome_text"
        android:textColor="@android:color/background_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintTop_toBottomOf="@+id/AppName" />


    <ImageView
        android:id="@+id/Login_logo"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:contentDescription="@string/login_image_description"
        app:srcCompat="@drawable/logo_essteling"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_titelText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/phonenumber_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginLeft="137dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/Esetup_confirm_button" />

    <EditText
        android:id="@+id/Login_number_id"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="number"
        android:labelFor="@id/Login_number_id"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        android:textSize="12sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/LoginText"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/Esetup_confirm_button" />

    <ImageButton
        android:id="@+id/Esetup_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/login_button_blue_v2" />

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="KidSecure"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
